    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "~4.9.4"
  },
  "lint-staged": {
    "src/**/*.{js,ts,scss,md,html,json}": [
